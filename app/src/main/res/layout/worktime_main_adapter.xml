<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="40dp">

    <TextView
        android:id="@+id/textViewWorkTimeBeginMainAdapter"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="0dp" />

    <TextView
        android:id="@+id/textViewWorkTimeEndAdapter"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="50dp" />

    <TextView
        android:id="@+id/textViewWorkTimeMainAdapter"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="100dp" />
    <TextView
        android:id="@+id/textViewWorktimeWRMainAdapter"
        android:layout_width="30dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="150dp" />

    <TextView
        android:id="@+id/textViewWorkTimeWorkerNameMainAdapter"
        android:layout_width="130dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="180dp"
        android:clickable="true"
        android:focusable="true" />

    <Button
        android:id="@+id/buttonDeleteWorktimeMainAdapter"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="310dp"
        app:icon="@drawable/garbage"
        app:iconGravity="textEnd"
        app:iconPadding="0dp" />
</FrameLayout>