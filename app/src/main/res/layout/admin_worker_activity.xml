<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout_admin_worker"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:openDrawer="start"
    tools:context=".Admin.WorkerActivity.AdminWorkerActivity">
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view_admin_worker"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/nav_menu"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <Spinner
        android:id="@+id/spinnerAdminWorkersAct"
        android:layout_width="344dp"
        android:layout_height="29dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView23" />

        <EditText
            android:id="@+id/editTextAdminWorkerNameAct"
            android:layout_width="318dp"
            android:layout_height="45dp"
            android:layout_marginTop="8dp"
            android:ems="10"
            android:inputType="text"
            app:layout_constraintStart_toStartOf="@+id/spinnerAdminWorkersAct"
            app:layout_constraintTop_toBottomOf="@+id/textView21" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:text="Bearbeiten:"
            app:layout_constraintStart_toStartOf="@+id/spinnerAdminWorkersAct"
            app:layout_constraintTop_toBottomOf="@+id/spinnerAdminWorkersAct" />

        <Button
            android:id="@+id/buttonDeleteAdminWorkerAct"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="156dp"
            android:text="Löschen"
            app:layout_constraintStart_toStartOf="@+id/editTextNewWorkerAdminWorkerAct"
            app:layout_constraintTop_toBottomOf="@+id/editTextAdminWorkerNameAct" />

        <Button
        android:id="@+id/buttonCancelAdminWorkerAct"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:text="Abbrechen"
        app:layout_constraintStart_toStartOf="@+id/buttonDeleteAdminWorkerAct"
        app:layout_constraintTop_toBottomOf="@+id/buttonDeleteAdminWorkerAct" />

    <Button
        android:id="@+id/buttonSaveAdminWorkerAct"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="48dp"
        android:text="Speichern"
        app:layout_constraintBottom_toBottomOf="@+id/buttonCancelAdminWorkerAct"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/buttonCancelAdminWorkerAct"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="Arbeiter:"
        app:layout_constraintStart_toStartOf="@+id/spinnerAdminWorkersAct"
        app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="48dp"
            android:text="Neu:"
            app:layout_constraintStart_toStartOf="@+id/editTextAdminWorkerNameAct"
            app:layout_constraintTop_toBottomOf="@+id/editTextAdminWorkerNameAct" />

        <EditText
            android:id="@+id/editTextNewWorkerAdminWorkerAct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:ems="10"
            android:inputType="text"
            app:layout_constraintStart_toStartOf="@+id/textView22"
            app:layout_constraintTop_toBottomOf="@+id/textView22" />

        <Button
            android:id="@+id/buttonCreateWorkerAdminWorkerAct"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:text="Hinzufügen"
            app:layout_constraintBottom_toBottomOf="@+id/buttonDeleteAdminWorkerAct"
            app:layout_constraintEnd_toEndOf="@+id/buttonSaveAdminWorkerAct"
            app:layout_constraintTop_toTopOf="@+id/buttonDeleteAdminWorkerAct" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.drawerlayout.widget.DrawerLayout>